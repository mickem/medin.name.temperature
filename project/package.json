{
  "name": "medin.name.temperatures",
  "version": "1.0.0",
  "description": "A temperature manager for homey",
  "main": "index.js",
  "scripts": {
    "build-settings": "cd settings && npx webpack --config settings-webpack.config.js --mode production",
    "build-app": "cd app && npx webpack --config app-webpack.config.js --mode production",
    "build-api": "cd app && npx webpack --config api-webpack.config.js --mode production",
    "prepare": "npm run build",
    "clean": "npx rimraf ../node_modules ../api.js ../app.js ../package.json ../settings/index.html ../settings/settings.js",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prebuild": "cpx fake-homey/index.js node_modules/homey",
    "build": "npm run build-settings && npm run build-app && npm run build-api && npm run install-dist",
    "quick-build": "tsc",
    "test": "jest --collect-coverage",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "install-dist": "cpx package.json ..  && cd .. && npm install --no-package-lock --production"
  },
  "author": "Michael Medin",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "bootstrap": "^4.4.1",
    "cpx": "^1.5.0",
    "css-loader": "^3.2.1",
    "homey-lib": "^2.4.5",
    "html-minifier": "^4.0.0",
    "html-minifier-terser": "^5.0.2",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-homey-config-composer": "^1.2.0",
    "prettier": "^1.19.1",
    "style-loader": "^1.0.1",
    "terser-webpack-plugin": "^2.2.2",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.3",
    "url-loader": "^2.1.0",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.2",
    "vue-property-decorator": "^8.3.0",
    "vue-template-compiler": "^2.6.10",
    "vue-template-loader": "^1.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "athom-api": "^3.1.11"
  },
  "files": [
    "lib/**/*"
  ]
}
